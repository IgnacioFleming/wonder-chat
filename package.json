{
  "name": "wonder-chat",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "copyFiles": "xcopy src\\public\\css dist\\public\\css /E /I /Y && xcopy src\\views dist\\views /E /I /Y",
    "build": "tsc && npm run copyFiles",
    "lint": "npx eslint",
    "watch": "tsc --watch & node --watch src/public --exec \"xcopy src\\public\\css dist\\public\\css /E /I /Y && xcopy src\\views dist\\views /E /I /Y\"",
    "dev": "concurrently -k -n \"BUILD,SERVER\" -c \"blue,green\" \"npm run watch\" \"node --watch --loader ts-node/esm src/index.ts\"",
    "start": "node dist/index.js"
  },
  "author": "Ignacio Fleming",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@types/express": "5.0.0",
    "concurrently": "9.1.2",
    "eslint": "9.20.1",
    "globals": "16.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1"
  },
  "type": "module",
  "dependencies": {
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-handlebars": "8.0.1",
    "mongoose": "8.10.1",
    "socket.io": "4.8.1",
    "zod": "3.24.2"
  }
}
