{
  "name": "wonder-chat",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "copyFiles": "xcopy src\\public dist\\public /E /I /Y && xcopy src\\views dist\\views /E /I /Y",
    "copyFilesProd": "cp -r src/public dist/public && cp -r src/views dist/views",
    "build": "tsc && npm run copyFilesProd",
    "lint": "npx eslint",
    "watch": "concurrently -n \"TSC,COPY\" -c \"cyan,yellow\" \"tsc --watch\" \"npx chokidar \\\"src/public/**/*\\\" \\\"src/views/**/*\\\" -c \\\"npm run copyFiles\\\"\"",
    "dev": "cross-env NODE_ENV=development concurrently -k -n \"BUILD,SERVER\" -c \"blue,green\" \"npm run watch\" \"nodemon --watch src --ext ts,handlebars --exec node --loader ts-node/esm src/index.ts\"",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "author": "Ignacio Fleming",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-livereload": "0.6.3",
    "@types/express": "5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/livereload": "0.9.5",
    "@types/mongoose": "5.11.96",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "chokidar-cli": "3.0.0",
    "concurrently": "9.1.2",
    "connect-livereload": "0.6.1",
    "cross-env": "7.0.3",
    "eslint": "9.20.1",
    "globals": "16.0.0",
    "livereload": "0.9.3",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1"
  },
  "type": "module",
  "dependencies": {
    "@types/multer": "^1.4.12",
    "bcrypt": "^5.1.1",
    "connect-mongo": "5.1.0",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-handlebars": "8.0.1",
    "express-session": "1.18.1",
    "mongoose": "8.10.1",
    "multer": "^1.4.5-lts.2",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "socket.io": "4.8.1",
    "zod": "3.24.2"
  }
}
