<div class="container">
  <h1 class="brand">WonderChat</h1>
  <div>
    <form class="authForm">
      <h2>CREATE ACCOUNT</h2>
      <p>Please complete your personal information:</p>
      <input name="full_name" type="text" class="form-control" placeholder="Full Name" />
      <input name="password" type="password" class="form-control" placeholder="Password" />
      <div class="btn-container">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
      <p>Do you already have an account? Please go to <a href="/login">Log In</a></p>
    </form>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="module" src="/ts/auth.js"></script>